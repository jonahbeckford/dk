{
  "[jsonc]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "cmake.configureOnOpen": false,
  "ocaml.sandbox": {
    "kind": "custom",
    // SYNC: src/DkStd_Std/Project/Init.ml, .vscode/settings.json
    "template": "${firstWorkspaceFolder}/dk -g dune-ide --fixed-length-modules false RunQuiet Ml.Exec --merlin -- $prog $args"
  },
  "C_Cpp.files.exclude": {
    "**/.vscode": true,
    "**/.vs": true,
    // intermediate build files for dk0
    "**/t/p/**": true,
    // cached build files for dk0
    "**/t/c/**": true
  },
  "editor.wordWrapColumn": 78,
  "json.schemaDownload.trustedDomains": {
    "https://github.com/diskuv/dk/raw/refs/heads/V2_5/etc/jsonschema/": true
  }
}
